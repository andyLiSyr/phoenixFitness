<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E84545">

    <TableLayout
        android:id="@+id/weeklyTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/weeklytitle"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:id="@+id/heading"
            android:background="@color/red">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Day"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Calories Entered"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Calories Burned"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/monday"
            >

            <TextView
                android:id="@+id/mondayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Monday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mondayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,642"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mondayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,421"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/tuesday"
            >

            <TextView
                android:id="@+id/tuesdayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Tuesday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tuesdayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1,984"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tuedayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,291"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/wednesday"
            >

            <TextView
                android:id="@+id/wednesdayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Wednesday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wednesdayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,295"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wednesdayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1,496"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/thursday"
            >

            <TextView
                android:id="@+id/thursdayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Thursday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/thursdayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,286"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/thursdayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,343"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/friday"
            >

            <TextView
                android:id="@+id/fridayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Friday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/friendsEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,156"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fridayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,112"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/saturday"
            >

            <TextView
                android:id="@+id/saturdayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Saturday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/saturdayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,494"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/saturdayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,750"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:id="@+id/sunday"
            >

            <TextView
                android:id="@+id/sundayDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Sunday"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sundayEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1,969"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sundayBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2,466"
                android:textSize="14sp" />


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/weeklytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Weekly Report"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>
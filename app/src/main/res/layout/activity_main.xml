<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="#E84545"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InputCals"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="75dp"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#00F1D9"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="Steps: " />

            <TextView
                android:id="@+id/caloriesBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Calories Burned: " />

            <TextView
                android:id="@+id/totCals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Total Calories: " />
        </LinearLayout>

        <Button
            android:id="@+id/InputCals"
            android:layout_width="171dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="122dp"
            android:layout_marginBottom="197dp"
            android:backgroundTint="#25BCAD"
            android:text="@string/input_calories" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InputCals"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="75dp"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="0" />

            <TextView
                android:id="@+id/caloriesBurncount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/totalcaloriescount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="0" />
        </LinearLayout>

        <Button
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="203dp"
            android:layout_marginBottom="93dp"
            android:padding="20dp"
            android:text="Friends     Online: " />

        <Button
            android:id="@+id/rankingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="559dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="104dp"
            android:padding="20dp"
            android:text="Ranking: 10" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="129dp"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="502dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/accountName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/testprofile" />

        <EditText
            android:id="@+id/enterCals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InputCals"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="409dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:hint="Enter your Number"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/weekly"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="78dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="36dp"
            android:text="Weekly Report" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="#E84545"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InputCals"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="75dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#00F1D9"
                android:padding="10dp"
                android:text="Steps: " />

            <TextView
                android:id="@+id/caloriesBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Calories Burned: " />

            <TextView
                android:id="@+id/totCals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Total Calories: " />
        </LinearLayout>

        <Button
            android:id="@+id/InputCals"
            android:layout_width="171dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="198dp"
            android:backgroundTint="#25BCAD"
            android:text="@string/input_calories" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/InputCals"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="75dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/caloriesBurncount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/totalcaloriescount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="0" />
        </LinearLayout>

        <Button
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="573dp"
            android:layout_marginEnd="203dp"
            android:layout_marginBottom="60dp"
            android:padding="20dp"
            android:text="Friends     Online: " />

        <Button
            android:id="@+id/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="583dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="70dp"
            android:padding="20dp"
            android:text="Ranking: " />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="129dp"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="502dp"
            android:text="John Smith"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button10"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/accountName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="57dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>